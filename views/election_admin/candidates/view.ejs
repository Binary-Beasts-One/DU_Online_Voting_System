<!DOCTYPE html>
<html lang="en">
  <head>
    <title>View Candidates</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>






<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


       
        <div class="main-panel">
          <div class="content-wrapper">
  
  
 
<%

        if(alertsm.length>0)
        {


%>
           
        

           <div class="alert alert-success" style="text-align: center;">
              <strong>Success!</strong>  <%= alertsm %>
            </div>
            <br /><br />
            <%
         
          
          }



          var count_candidates=0;
          var count_no_candidates=0;
          var count_disqualified=5;

          positions.forEach(function(position){
          count_candidates = count_candidates + position.candidate.length;
          if(position.candidate.length==0)
          {

           count_no_candidates = count_no_candidates + 1;          
         }

  
        
        });


          if(count_candidates.length<1)
          {






          %>

          <div class="alert alert-warning" role="alert" style="text-align: center;">
            No record found!
          </div>


          <%
          

          }
          else

          {
            
 

        %>  


        <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card corona-gradient-card">
                <div class="card-body py-0 px-0 px-sm-3">
                  <div class="row align-items-center">
                    <div class="col-4 col-sm-3 col-xl-2">
                      <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                    </div>
                    <div class="col-5 col-sm-7 col-xl-8 p-0">
                      <h4 class="mb-1 mb-sm-0">Election Candidates Overview</h4>
                      <p class="mb-0 font-weight-normal d-none d-sm-block"></p>
                    </div>
                    <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>








        <div class="row">
          <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-9">
                    <div class="d-flex align-items-center align-self-start">
                      <h3 class="mb-0"><%=  positions.length %></h3>
                      <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="icon icon-box-success ">
                      <span class="mdi mdi-arrow-top-right icon-item"></span>
                    </div>
                  </div>
                </div>
                <h6 class="text-muted font-weight-normal">Total Positions</h6>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-9">
                    <div class="d-flex align-items-center align-self-start">
                      <h3 class="mb-0"><%=  count_candidates %></h3>
                      <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="icon icon-box-success">
                      <span class="mdi mdi-arrow-top-right icon-item"></span>
                    </div>
                  </div>
                </div>
                <h6 class="text-muted font-weight-normal">Total Candidates </h6>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-9">
                    <div class="d-flex align-items-center align-self-start">
                      <h3 class="mb-0"><%= disqualified %></h3>
                      <p class="text-danger ml-2 mb-0 font-weight-medium"></p>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="icon icon-box-danger">
                      <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                    </div>
                  </div>
                </div>
                <h6 class="text-muted font-weight-normal">Disquafied Candidates </h6>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-9">
                    <div class="d-flex align-items-center align-self-start">
                      <h3 class="mb-0"><%= count_no_candidates  %></h3>
                      <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                    </div>
                  </div>
                  <div class="col-3">
                    <div class="icon icon-box-success ">
                      <span class="mdi mdi-arrow-top-right icon-item"></span>
                    </div>
                  </div>
                </div>
                <h6 class="text-muted font-weight-normal">Positions without candidates</h6>
              </div>
            </div>
          </div>
       
       
       
       
       <%
       function dateconversion(date_value)
                         {
                       
                          var formattedDate = date_value.toLocaleDateString('en-GB', {
                          day: 'numeric', month: 'short', year: 'numeric'
                           }).replace(/ /g, '-');

                           return formattedDate;
                        }
       
          positions.forEach(function(position){       
          
       %>

<% if (position.candidate.length>0){ %>


       <div class="row ">
        <div class="col-12 grid-margin style="width:100%;">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title"><%= position.position_name %></h4>
              
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                   
                      <th> First Name </th>
                      <th> Last Name </th>
                      <th> Identification </th>
                      <th> Phone number </th>
                      <th> email </th>
                      <th> Date Registered </th>
                      <th> Candidate Status </th>
                    </tr>
                  </thead>
                  <tbody>
                   <%
                   position.candidate.forEach(function(candidate_info){ 
              
                      %>
                    <tr>   
                      <td>
                        <img src="/images/faces/user.png" alt="image" />
                        <span class="pl-2"><%= candidate_info.user_info.firstname %></span>
                      </td>
                      <td> <%= candidate_info.user_info.lastname %> </td>
                      <td> <%= candidate_info.user_info.identification %></td>
                      <td> <%= candidate_info.user_info.phonenumber %> </td>
                      <td> <%= candidate_info.user_info.email %> </td>
                     <td> <%= dateconversion(candidate_info.createdAt) %></td>
                      <td>
                       <%
                        if (candidate_info.status=="eligible")
                        {
                       %>  
                        <div class="badge badge-outline-success">eligible</div>
                      <%
                        }
                        else {
                      %>
                      <div class="badge badge-outline-danger">Disquafied</div>
                     <%
                        }
                     %> 

                      </td>
                    </tr>
                    <% }) %>
          
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
           

          </div>
          <%  }else{%>

            <div class="row mx-auto">
        <div class="col-12 grid-margin mx-auto >
          < div class="card">
            <div class="card-body">

              
                <div class="alert alert-warning" role="alert" style="text-align: center;">
            No candidate registered for <strong> <%= position.position_name %> </strong>
          </div>
                </div>
              </div>
              </div>
            </div>

            <% }%>
         
        <% }) %>
       

       
        </div>

           

          <% }%>
   


        <!-- main-panel ends -->
   
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    </div> 
    
     <!-- adding scripts -->
    <%- include('../partials/script.ejs') %>
  </body>
</html>