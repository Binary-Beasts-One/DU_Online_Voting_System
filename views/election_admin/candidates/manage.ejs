<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Candidate Management</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>






<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


       
        <div class="main-panel">
          <div class="content-wrapper">
  
    


            <div class="content-wrapper">
              <div class="row">
                <div class="col-12 grid-margin stretch-card">
                  <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                      <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                          <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                          <h3 class="mb-1 mb-sm-0" style="text-align: center;">Election Candidates Management</h3>
                          <p class="mb-0 font-weight-normal d-none d-sm-block" style="text-align: center;"><i>Select Position to manage the candidate</i></p>
                        </div>
                        <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>      

            <br />
            
  
<%

        if(alertsm.length>0)
        {


%>
        

           <div class="alert alert-success" style="text-align: center;">
              <strong>Success!</strong>  <%= alertsm %>
            </div>
            <br /><br />
            <%
          
          
            }

            if(positions.length<1)
            {
            %>

            <div class="alert alert-warning" role="alert" style="text-align: center;">
              No any election positions were found!
            </div>


            <%
            

            }
            else

            {
              
   

          %>  
            <div class="row">
             
  
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                  
  
                    <div class="table-responsive">
                      <table class="table table-dark table-hover">
                        <thead>
                          <tr>
                          
                            <th style="width:5%"> Position </th>
                            <th style="width:5%"> Election Title </th>
                            <th style="width:5%"> Election ID </th>
                            <th style="width:5%"> Number of Candidates</th>
                            <th style="width:5%"> Action </th>
  
                          </tr>
                        </thead>
                        <tbody>
              
              <%
                         
                          
                         //date conversion function

                         function dateconversion(date_value)
                         {
                       
                          var formattedDate = date_value.toLocaleDateString('en-GB', {
                          day: 'numeric', month: 'short', year: 'numeric'
                           }).replace(/ /g, '-');

                           return formattedDate;
                        }


                          positions.forEach(function(position){
                          

              %>
                          <tr>                            
                            <td> <%= position.position_name %> </td>
                            <td>   <%= position.election.title %> </td>
                            <td> <%= position.election.election_display_id %>  </td>
                            <td> <%= position.candidate.length %> </td>
          

                            <td>
                              <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"
                                  aria-haspopup="true" aria-expanded="false">
                                  Action
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item " href="/candidate/manage2/<%= position.position_id %>/<%= position.election.election_id %>">Manage</a>
                      
                                </div>
                              </div>
                            </td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
             
            </div>
         
          </div>

          <% }%>
   


        <!-- main-panel ends -->
   
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    </div> 
    
    // <!-- adding scripts -->
    <%- include('../partials/script.ejs') %>
  </body>
</html>