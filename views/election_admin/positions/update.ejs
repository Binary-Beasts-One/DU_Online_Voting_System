<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Schedule Election</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>






<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


        <!-- Form -->
        
        <div class="main-panel">
          <div class="content-wrapper">


              
            <div class="content-wrapper">
              <div class="row">
                <div class="col-12 grid-margin stretch-card">
                  <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                      <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                          <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                          <h3 class="mb-1 mb-sm-0" style="text-align: center;">Election Position Update</h3>
                          <p class="mb-0 font-weight-normal d-none d-sm-block" style="text-align: center;"><i>Enter Position Details (Step 2 Of 2)</i></p>
                        </div>
                        <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>



  

            <br /><br />             
            <div class="row">
              <div class="col-lg-8 mx-auto">
                <div class="card">
                  <div class="card-body">
                   
                    <form action="/position/updatefinal" method="POST" enctype="application/x-www-form-urlencoded">
                      
                      <input type="hidden" id="custId" name="election_id" value="<%= eid1 %>">
                      <input type="hidden" id="custId" name="position_id" value="<%= pid1 %>">
                      <div class="form-group">
                        <label for="election_title">Position Name</label>
                        <input type="text" class="form-control" name="position_name" id="position_name" placeholder="position name" required>
                      </div>


                      

                      <button type="submit" class="btn btn-primary mr-2">Confirm</button>
                      <button class="btn btn-dark">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>

          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->

          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    </div> 
    
     <!-- adding scripts -->
    <%- include('../partials/script.ejs') %>
  </body>
</html>