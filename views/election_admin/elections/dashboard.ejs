<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


        <!-- Main Content -->

        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card corona-gradient-card">
                  <div class="card-body py-0 px-0 px-sm-3">
                    <div class="row align-items-center">
                      <div class="col-4 col-sm-3 col-xl-2">
                        <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                      </div>
                      <div class="col-5 col-sm-7 col-xl-8 p-0">
                        <h4 class="mb-1 mb-sm-0 text-center">Welcome  <%= fname %>  <%= lname %></h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
  
  
            <!-- Election heading -->
            <div class="row ">
              <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
                <div class="card ">
                  <div class="card-body bg-dark">
                    <div class="row">
                      <div class="col-9">
                        <div class=" align-items-center align-self-start">
                          <h3 class="mb-0 text-white ">Election Stats</h3>
                          <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="icon icon-box-success ">
                          <span class="  mdi mdi-minus-network text-secondary  icon-item"></span>
                        </div>
                      </div>
                    </div>
                  
                  </div>
                </div>
              </div>
            </div>
  
            <div class="row">
              <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="mb-0"><%= election_stats.election_count %></h3>
                          <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="icon icon-box-success ">
                          <span class=" mdi mdi-arrow-top-right  icon-item"></span>
                        </div>
                      </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Total Elections</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="mb-0"><%= election_stats.election_scheduled %></h3>
                          <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="icon icon-box-success">
                          <span class=" mdi mdi-arrow-top-right icon-item"></span>
                        </div>
                      </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Election Scheduled</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="mb-0"><%= election_stats.election_running %></h3>
                          <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="icon icon-box-success">
                          <span class="mdi mdi-arrow-top-right icon-item"></span>
                        </div>
                      </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Election Running</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="mb-0"><%= election_stats.election_completed %></h3>
                          <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="icon icon-box-danger ">
                          <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                        </div>
                      </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Election Completed</h6>
                  </div>
                </div>
              </div>
            </div>
  
            <!--  -->
    <!-- Election heading -->
    <div class="row ">
      <div class="col-xl-5 col-sm-6 grid-margin stretch-card">
        <div class="card ">
          <div class="card-body bg-dark">
            <div class="row">
              <div class="col-9">
                <div class=" align-items-center align-self-start">
                  <h3 class="mb-0 text-white ">Elections Summary</h3>
                  <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                </div>
              </div>
              <div class="col-3">
                <div class="icon icon-box-success ">
                  <span class="  mdi mdi-account-multiple text-secondary  icon-item"></span>
                </div>
              </div>
            </div>
          
          </div>
        </div>
      </div>
    </div>



    
  
    <%

    if(elections.length<1)
    {

    %>

    <div class="alert alert-warning" role="alert" style="text-align: center;">
      No any election were found!
    </div>


    <%
    

    }
    else

    {
      


  %>  
      <div class="row">
       

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
            

              <div class="table-responsive">
                <table class="table table-dark table-hover">
                  <thead>
                    <tr>
                  
                      <th style="width:5%"> Election Title </th>
                      <th style="width:5%"> Start Date and Time</th>
                      <th style="width:5%"> Stop Date and Time</th>
                      <th style="width:5%"> Date Registered </th>
                      <th style="width:5%"> Status </th>
                      <th style="width:5%"> Info </th>

                    </tr>
                  </thead>
                  <tbody>
        
        <%
                   
                    
                   //date conversion function

                   function dateconversion(date_value)
                   {
                 
                    var formattedDate = date_value.toLocaleDateString('en-GB', {
                    day: 'numeric', month: 'short', year: 'numeric'
                     }).replace(/ /g, '-');

                     return formattedDate;
                  }


                    elections.forEach(function(election){
                    var class_css="";
                    var status_value="";
                    if (election.status=="not_started")
                    {
                      
                      var class_css="badge badge-outline-warning";
                      var status_value="Not Started";
                    }   
                    else if (election.status=="running")
                     {
                      var class_css="badge badge-outline-success";
                      var status_value="running";

                     }
                     else
                     {
                      var class_css="badge badge-outline-danger";
                      var status_value="completed"; 
               

                     }

        %>
                    <tr>
                    
                      <td> <%= election.title %> </td>
                      <td> <%= dateconversion(election.start_date) %> &nbsp;|&nbsp;<%= election.start_time %></td>
                      <td> <%= dateconversion(election.stop_date) %>&nbsp;|&nbsp;<%= election.stop_time %> </td>
                      <td> <%= dateconversion(election.createdAt) %> </td>
                      <td> <div class="<%= class_css %> "><%= status_value %></div>
                       
                        <%
                        
                        if (election.published=="yes")
                        {
                        %>
                        <br/><br/>
                        <div class="badge badge-outline-success">Published</div>
                       <% } %>
                      </td>
                      <td>
                       <a href="/election/eview/<%= election.election_id %>"> <button type="button" class="btn btn-info btn-fw">View</button>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
       
      </div>
   
    </div>

    <% }%>

      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    </div> 
    
    <!--adding scripts-->
    <%- include('../partials/script.ejs') %>
  </body>
</html>