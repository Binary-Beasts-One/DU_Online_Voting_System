<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Schedule Election</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>

<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


        <!-- Form -->
        
        <div class="main-panel">
          <div class="content-wrapper">
      

            <div class="content-wrapper">
              <div class="row">
                <div class="col-12 grid-margin stretch-card">
                  <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                      <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                          <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                          <h3 class="mb-1 mb-sm-0" style="text-align: center;">Election  Registration</h3>
                          <p class="mb-0 font-weight-normal d-none d-sm-block" style="text-align: center;"><i>Enter Election Details (Step 1 of 2)</i></p>
                        </div>
                        <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
    
              

              <% if(alertsm.length>0){ %>
                <div class="alert alert-danger" style="text-align: center;">
                  <strong>Error!</strong>  <%= alertsm %>
                </div>
                <br /><br />
              <%}%>
      

            <br /><br />             
            <div class="row">
              <div class="col-lg-8 mx-auto">
                <div class="card">
                  <div class="card-body">
                   
                    <form action="/election/save" method="POST" enctype="application/x-www-form-urlencoded">
                 
                      <div class="form-group">
                        <label for="election_title">Election Title</label>
                        <input type="text" class="form-control" name="title" id="election_title" placeholder="Election Title" required>
                      </div>
                      
                      <div class="row">
                        <div class="form-group col-lg-4 mx-auto">
                          <label for="start_date">Start Date</label>
                          <input type="date" class="form-control" id="startDate" name="start_date" placeholder="dd/mm/yyyy" required>
                        </div>
                        <div class="form-group col-lg-4 mx-auto">
                          <label for="stop_date">Stop Date</label>
                          <input type="date" class="form-control" name="stop_date" placeholder="dd/mm/yyyy" required>
                        </div>
                      
                      </div>
                      <div class="row">
                        <div class="form-group col-lg-4 mx-auto">
                          <label for="start_time">Start Time</label>
                          <input type="time" class="form-control" name="start_time" required >
                        </div>
                        <div class="form-group col-lg-4 mx-auto">
                          <label for="stop_time">Stop Time</label>
                          <input type="time" class="form-control" name="stop_time" required >
                        </div>
                      </div>

                      <button type="submit" class="btn btn-primary mr-2">Confirm</button>
                      <button class="btn btn-dark">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
        </div>
        <!-- main-panel ends -->
      </div>
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
    </div> 
    
     <!-- adding scripts -->
    <%- include('../partials/script.ejs') %>
  </body>
</html>