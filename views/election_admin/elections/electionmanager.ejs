<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Manage Election</title>
    <!-- Required meta tags -->
    <%- include('../partials/head.ejs') %>
  </head>
  <body>






<div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->


      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('../partials/navigation.ejs') %>
        </nav>


       
        <div class="main-panel">
          <div class="content-wrapper">
  
        
            <div class="content-wrapper">
              <div class="row">
                <div class="col-12 grid-margin stretch-card">
                  <div class="card corona-gradient-card">
                    <div class="card-body py-0 px-0 px-sm-3">
                      <div class="row align-items-center">
                        <div class="col-4 col-sm-3 col-xl-2">
                          <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                        </div>
                        <div class="col-5 col-sm-7 col-xl-8 p-0">
                          <h3 class="mb-1 mb-sm-0" style="text-align: center;">Election  Manager</h3>
                          <p class="mb-0 font-weight-normal d-none d-sm-block" style="text-align: center;"><i>Election Listing and Status</i></p>
                        </div>
                        <div class="col-3 col-sm-2 col-xl-2 pl-0 text-center">
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

<br />

<%

        if(alertsm.length>0)
        {
%>
            <div class="alert alert-success" style="text-align: center;">
              <strong>Success!</strong>  <%= alertsm %>
            </div>
            <br /><br />
            <%
          
          
          }

          if(elections.length<1)
          {
          %>

          <div class="alert alert-warning" role="alert" style="text-align: center;">
            No record found!
          </div>


          <%
          

          }
          else

          {
            
 

        %>  
            <div class="row">
             
  
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                  
  
                    <div class="table-responsive">
                      <table class="table table-dark table-hover">
                        <thead>
                          <tr>
                            <th style="width:5%"> Election Title </th>
                            <th style="width:5%"> Start Date and Time</th>
                            <th style="width:5%"> Stop Date and Time</th>
                            <th style="width:5%"> Date Registered </th>
                            <th style="width:5%"> Status </th>
                            <th style="width:5%"> Action </th>
  
                          </tr>
                        </thead>
                        <tbody>
              
              <%
                         
                          
                         //date conversion function

                         function dateconversion(date_value)
                         {
                       
                          var formattedDate = date_value.toLocaleDateString('en-GB', {
                          day: 'numeric', month: 'short', year: 'numeric'
                           }).replace(/ /g, '-');

                           return formattedDate;
                        }


                          elections.forEach(function(election){
                          var class_css="";
                          var status_value="";
                          if (election.status=="not_started")
                          {
                            
                            var class_css="badge badge-outline-warning";
                            var status_value="Not Started";
                          }   
                          else if (election.status=="running")
                           {
                            var class_css="badge badge-outline-success";
                            var status_value="running";

                           }
                           else
                           {
                            var class_css="badge badge-outline-danger";
                            var status_value="completed"; 
                     

                           }

              %>
                          <tr>
                            <td> <%= election.title %> </td>
                            <td> <%= dateconversion(election.start_date) %> &nbsp;|&nbsp;<%= election.start_time %> </td>
                            <td> <%= dateconversion(election.stop_date) %>&nbsp;|&nbsp; <%= election.stop_time %></td>
                            <td> <%= dateconversion(election.createdAt) %> </td>
                            <td> <div class="<%= class_css %> "><%= status_value %></div>
                             
                              <%
                              
                              if (election.published=="yes" && election.status == "completed")
                              {
                              %>
                              <br/><br/>
                              <div class="badge badge-outline-success">Published</div>
                             <% } %>
                            </td>
                            <td>
                              <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"
                                  aria-haspopup="true" aria-expanded="false">
                                  Action
                                </button>
                                <div class="dropdown-menu">
                                  <%
                                      if(election.status=="not_started")
                                      {
                                  %>
                                  <a class="dropdown-item " href="/election/start/<%= election.election_id %>">Start Election</a>
                                 <%  }
                                      if(election.status=="running")
                                      {
                                 %>
                                  <a class="dropdown-item" href="/election/stop/<%= election.election_id %>">Stop Election</a>
                                  <%
                                      }
                                      if(election.status=="not_started" || election.status=="completed")
                                      {
                                  %>
                                  <a class="dropdown-item" href="/election/delete/<%= election.election_id %>">Delete Election</a>
                                  <%
                                      }
                                  %>
                                  
                                  <a class="dropdown-item" href="/election/viewelection/<%= election.election_id %>">View Election</a>
                                  
                                  <%
                                  if(election.status=="completed" && election.published=="no" )
                                  {
                                  %>
                                  <a class="dropdown-item" href="/election/publish/<%= election.election_id %>">publish results</a>
                                 <%
                                   }
                                  %>
                                </div>
                              </div>
                            </td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
             
            </div>
         
          </div>

          <% }%>
   


        <!-- main-panel ends -->
   
      <footer class="footer">
        <%- include('../partials/footer.ejs') %>
      </footer>
      <!-- page-body-wrapper ends -->
    </div> 
    
    // adding scripts -->
    <%- include('../partials/script.ejs') %>
  </body>
</html>