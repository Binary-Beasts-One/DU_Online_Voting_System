<!DOCTYPE html>
<html lang="en">
  <head>
    <title> Voter DashBoard </title>
    <!-- Required meta tags -->
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <div class="container-scroller">

      <!-- partial:partials/_sidebar.html -->
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <%- include('./partials/navigation.ejs') %>
      </nav>
      
      <!-- Main Content -->
      <div class="main-panel">
        <div class="content-wrapper">
          
          <!-- Heading on Dashboard -->
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card corona-gradient-card">
                <div class="card-body py-0 px-0 px-sm-3">
                  <div class="row align-items-center">
                    <div class="col-4 col-sm-3 col-xl-2">
                      <img src="/images/dashboard/Group126@2x.png" class="gradient-corona-img img-fluid" alt="">
                    </div>
                    <div class="col-5 col-sm-7 col-xl-8 p-0">
                      <h4 class="mb-1 mb-sm-0 text-center"> Welcome  <%= fname %>  <%= lname %> </h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>  
          
          <%
            if(alert != null)
            {
          %>
              
              <div class="alert alert-warning" style="text-align: center;">
                <%= alert %>
              </div>

          <%
            }
          %>

          <!-- Election heading -->
          <div class="row ">
            <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
              <div class="card ">
                <div class="card-body bg-dark">
                  <div class="row">
                    <div class="col-9">
                      <div class=" align-items-center align-self-start">
                        <h3 class="mb-0 text-white ">Elections Stats</h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-success ">
                        <span class="   mdi mdi-odnoklassniki  text-secondary  icon-item"></span>
                      </div>
                    </div>
                  </div>
                
                </div>
              </div>
            </div>
    </div>

          <!-- ROW WITH STATISTICS -->
          <div class="row">

            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%= election_stats.election_count %></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <!-- <div class="col-3">
                      <div class="icon icon-box-success ">
                        <span class=" mdi mdi-arrow-top-right  icon-item"></span>
                      </div>
                    </div> -->
                  </div>
                  <h6 class="text-muted font-weight-normal">Total Elections</h6>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%= election_stats.election_scheduled %></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <!-- <div class="col-3">
                      <div class="icon icon-box-success">
                        <span class=" mdi mdi-arrow-top-right icon-item"></span>
                      </div>
                    </div> -->
                  </div>
                  <h6 class="text-muted font-weight-normal">Upcoming Elections</h6>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%= election_stats.election_running %></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <!-- <div class="col-3">
                      <div class="icon icon-box-success">
                        <span class="mdi mdi-arrow-top-right icon-item"></span>
                      </div>
                    </div> -->
                  </div>
                  <h6 class="text-muted font-weight-normal">Election Running</h6>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-9">
                      <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0"><%= election_stats.election_completed %></h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <!-- <div class="col-3">
                      <div class="icon icon-box-danger ">
                        <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                      </div>
                    </div> -->
                  </div>
                  <h6 class="text-muted font-weight-normal">Election Completed</h6>
                </div>
              </div>
            </div>

          <!-- ENDING OF ROW WITH STATISTICS -->
          </div>
    
          <!-- Election heading -->
          <div class="row ">
            <div class="col-xl-5 col-sm-6 grid-margin stretch-card">
              <div class="card ">
                <div class="card-body bg-dark">
                  <div class="row">
                    <div class="col-9">
                      <div class=" align-items-center align-self-start">
                        <h3 class="mb-0 text-white ">Elections Summary</h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="icon icon-box-success ">
                        <span class="  mdi mdi-account-multiple text-secondary  icon-item"></span>
                      </div>
                    </div>
                  </div>
                
                </div>
              </div>
            </div>
    </div>
  
          <%

            if(elections.length < 1)
            {

          %>

          <div class="alert alert-warning" role="alert" style="text-align: center;">
            No any election were found!
          </div>

          <%          

            }
            else
            {

          %>

          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-dark table-hover">
                      <thead>
                        <tr>                  
                          <th style="width:5%"> Election Title </th>
                          <th style="width:5%"> Start Date </th>
                          <th style="width:5%"> Start Time </th>
                          <th style="width:5%"> Stop Date </th>
                          <th style="width:5%"> Stop Time </th>
                          <th style="width:5%"> Status </th>
                          <th style="width:5%"> Links </th>
                        </tr>
                      </thead>
                      <tbody>
        
                      <%                   
                    
                        //date conversion function

                        function dateconversion(date_value)
                        {
                      
                          var formattedDate = date_value.toLocaleDateString('en-GB', {
                          day: 'numeric', month: 'short', year: 'numeric'
                          }).replace(/ /g, '-');

                          return formattedDate;
                        }

                        for(let j = 0; j < 5; j++){
                        var election = elections[i];
                        var class_css="";
                        var status_value="";
                        if (election.status=="not_started")
                        {                          
                          var class_css="badge badge-outline-warning";
                          var status_value="Not Started";
                        }   
                        else if (election.status=="running")
                        {
                          var class_css="badge badge-outline-success";
                          var status_value="running";

                        }
                        else if (election.status=="completed")
                          {  
                            if(election.published == "yes")                        
                            {
                              var class_css="badge badge-outline-primary";
                              var status_value="Published";
                            }
                            else{
                              var class_css="badge badge-outline-danger";
                              var status_value="Completed";
                            }
                          }

                      %>

                      <tr>                      
                        <td> <%= election.title %> </td>
                        <td> <%= dateconversion(election.start_date) %> </td>
                        <td> <%= election.start_time %> </td>
                        <td> <%= dateconversion(election.stop_date) %> </td>
                        <td> <%= election.stop_time %> </td>
                        <td> <div class="<%= class_css %> "><%= status_value %></div>
                        
                          

                        </td>

                        <%                        
                          if (election.status=="not_started")
                          {
                        %>

                        <td>
                        
                          <a href="/voter/eview/<%= election.election_id %>" class="btn btn-primary ">View Info </a>
                        </td>

                        <% 
                          }

                          else if (election.status=="running")
                          {
                            for(let i = 0; i < hasVoted.length; i++)
                            {
                              if(hasVoted[i].election_id === election.election_id)
                              {
                                if(hasVoted[i].hasVoted === false && hasVoted[i].toShowElection === true)
                                {                            
                        %>

                        <td>
                          <a href="/voter/evote/<%= election.election_id %>" class="btn btn-info">Vote</a>
                        </td>

                        <% 
                                }
                                else if(hasVoted[i].hasVoted === true && hasVoted[i].toShowElection === true)
                                {
                        %>

                        <td>
                          <a href="/voter/evote/<%= election.election_id %>"> <button type="button" class="btn btn-danger" disabled> Already Voted </button>
                        </td>

                        <%
                                }
                              }
                            }
                          }                        
                          else if (election.status=="completed")
                          {
                        
                        %>
                            <%if(election.published == "yes") {%>
                              <td>
                                      <button type="button" class="btn btn-info dropdown-toggle"
                                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                      Action
                                  </button>
                                    <div class="dropdown-menu">
                                        
                                        <%if(election.status == "completed"){%>
                                        <a class="dropdown-item"
                                            href="/voter/eresult/<%= election.election_id  %>">View Results</a>
                                        <% }if(election.published == "yes"){ %>
                                            
                                            <a class="dropdown-item"
                                        href="/downloads/<%= election.election_id  %>.pdf">Download</a>
                                        
                                        <%}%>
                                    </div>
                                </td>
                              
                              <% }else {%>
                                <td>
                                <a href="/voter/eresult/<%= election.election_id %>"> <button type="button" class="btn btn-info btn-fw" disabled>Completed</button>
                              </td>
                                <%} %>
              

                        <% 
                          } 
                        %>
                      </tr>

                      <!-- closing Election for loop-->
                      <% 
                        }
                      %>

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
          </div>

          <footer class="footer">
            <%- include('./partials/footer.ejs') %>
          </footer>

        <!-- page-body-wrapper ends -->
        </div>

          <%        
            }
          %>
      
      <!-- Ending of Main - panel DIV -->
      </div>

    <!-- Ending of Container - Scroller DIV -->
    </div> 
    
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/vendors/select2/select2.min.js"></script>
    <script src="/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/js/off-canvas.js"></script>
    <script src="/js/hoverable-collapse.js"></script>
    <script src="/js/misc.js"></script>
    <script src="/js/settings.js"></script>
    <script src="/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/js/file-upload.js"></script>
    <script src="/js/typeahead.js"></script>
    <script src="/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>